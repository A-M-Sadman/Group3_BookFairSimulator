<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.groupthree.group3_bookfairsimulator.AbdullahMohammadSadman.ViewPendingTaskController">
   <children>
      <Label layoutX="160.0" layoutY="21.0" text="View Pending Tasks">
         <font>
            <Font name="System Bold Italic" size="30.0" />
         </font>
      </Label>
      <TableView fx:id="taskTableView" layoutX="23.0" layoutY="100.0" prefHeight="200.0" prefWidth="262.0">
        <columns>
          <TableColumn fx:id="taskIdCol" prefWidth="75.0" text="Task ID" />
          <TableColumn fx:id="descriptionCol" prefWidth="75.0" text="Description" />
            <TableColumn fx:id="zoneCol" prefWidth="75.0" text="Zone" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button layoutX="333.0" layoutY="274.0" mnemonicParsing="false" onAction="#showPendingTasks" text="Show pending tasks" />
      <Button layoutX="495.0" layoutY="360.0" mnemonicParsing="false" onAction="#back" text="&lt;- Dashboard" />
   </children>
</AnchorPane>
